@model IEnumerable<GerenciaIgreja.Models.Membro>
@{
    Layout = "~/Views/Shared/Cadastro.cshtml";
}

<h2>Cadastro de Membros</h2>


@section Styles{
    <link href="~/Content/bootstrap-select.css" rel="stylesheet" />
    <link href="~/Content/Cadastro/Membro.css" rel="stylesheet" />
}

@section TituloGrid {
    <th>Nome</th>
    <th>Telefone</th>
    <th>Endereço</th>
    <th>Data de Nascimento</th>
    <th>Ativo</th>
    <th>Ação</th>
}
@section LinhaGrid {
    @{
        var linha = 0;
        foreach (var item in Model)
        {
            linha++;
            if (linha <= ViewBag.QuantMaxLinhasPagina)
            {
                var ativo = (item.Ativo ? "SIM" : "NÃO");
                var data = (item.DataNascimento.ToShortDateString());

                <tr data-id="@item.Id">
                    <td>@item.Nome</td>
                    <td>@item.Telefone</td>
                    <td>@item.Endereco</td>
                    <td>@data</td>
                    <td>@ativo</td>
                    <td>
                        <a class="btn btn-primary btn-alterar" role="button"><i class="glyphicon glyphicon-pencil"></i> Alterar</a>
                        <a class="btn btn-danger btn-excluir" role="button"><i class="glyphicon glyphicon-trash"></i> Excluir</a>
                    </td>
                </tr>
            }
            else
            {
                break;
            }
        }
    }
}
@section CamposCadastro {
    <div class="row">
        <div class="form-group">
            @Html.Label("txt_Nome", "Nome", new { @class = "col-md-3 control-label" })
            <div class="col-md-12">
                @Html.TextBox("txt_Nome", null, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("txt_Telefone", "Telefone", new { @class = "col-md-3 control-label" })
            <div class="col-md-12">
                @Html.TextBox("txt_Telefone", null, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">

            @Html.Label("txt_Endereco", "Endereço", new { @class = "col-md-3 control-label" })
            <div class="col-md-12">
                @Html.TextBox("txt_Endereco", null, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">

            @Html.Label("txt_Data", "Data", new { @class = "col-md-3 control-label" })
            <div class="col-md-12">
                @Html.Editor("txt_Data", null, new { @class = "col-md-3 control-label" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("cbx_ativo", "Ativo", new { @class = "col-md-3 control-label" })
            <div class="col-md-12">
                @Html.CheckBox("cbx_Ativo")
            </div>
        </div>
    </div>
}

@section Scripts{
    <script src="~/Scripts/bootstrap-select.js"></script>


    <script>
        var tituloPagina = '@ViewBag.Title';
        var url_excluir = '@Url.Action("Excluir", "Membro")';
        var url_confirmar = '@Url.Action("Inserir", "Membro")';
        var url_page_click = '@Url.Action("paginacao", "Membro")';
        var url_tam_pag_change = '@Url.Action("paginacao", "Membro")';
        var url_alterar = '@Url.Action("Recuperar", "Membro")';
    </script>


    @System.Web.Optimization.Scripts.Render("~/bundles/CadastroMembro")

}